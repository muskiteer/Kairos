# Kairos AI Trading System - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI CONFIGURATION
# =============================================================================

# Google Gemini AI API Key
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Supabase Project Configuration
# Get from: https://supabase.com/dashboard -> Your Project -> Settings -> API
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Database Password (if needed for direct connections)
SUPABASE_DB_PASSWORD=your_database_password_here

# =============================================================================
# TRADING API CONFIGURATION
# =============================================================================

# Recall Network Trading API
# Get from: https://recall.network/dashboard
RECALL_API_KEY=your_recall_api_key_here

# Recall API Base URL (use sandbox for testing)
RECALL_SANDBOX_API_BASE=https://api.sandbox.competitions.recall.network

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Application Environment
ENVIRONMENT=development

# Debug Mode (true/false)
DEBUG=true

# API Server Configuration
API_HOST=localhost
API_PORT=8000
